<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    cardview:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="150dp"
            android:layout_height="170dp" />

        <TextView
            android:id="@+id/cardBookName"
            android:layout_width="208dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="Book name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardAuthorName"
            android:layout_width="208dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cardBookName"
            android:gravity="center_vertical"
            android:text="Author : ibrahim iqbal"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cardISBN"
            android:layout_width="208dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cardAuthorName"
            android:gravity="center_vertical"
            android:text="ISBN: 0-943396-04-2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cardRating"
            android:layout_width="208dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/cardISBN"
            android:text="Rating: 4.5" />


    </RelativeLayout>



</android.support.v7.widget.CardView>