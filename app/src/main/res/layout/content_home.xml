<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HOMEActivity"
    android:padding="5dp"
    tools:showIn="@layout/app_bar_home"
    >

    <TextView
        android:id="@+id/catagoriesTextID"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/CategoriesSpinnerViewID"
        android:layout_toStartOf="@+id/CategoriesSpinnerViewID"
        android:background="#b4d965"
        android:text="Categories"
        android:textColor="#2e93c9"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/CategoriesSpinnerViewID"
        android:paddingTop="5dp"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        >

    </Spinner>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/catagoriesTextID"></android.support.v7.widget.RecyclerView>



</RelativeLayout>